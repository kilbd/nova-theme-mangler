{
  "identifier": "com.kilb.theme-mangler",
  "name": "Theme Mangler",
  "organization": "Drew Kilb",
  "description": "Customize your preferred theme.",
  "version": "1.0.0",
  "categories": ["themes"],
  "repository": "https://github.com/kilbd/nova-theme-mangler/",
  "bugs": "https://github.com/kilbd/nova-theme-mangler/issues",

  "main": "main.js",

  "entitlements": {
    "filesystem": "readwrite"
  },

  "commands": {
    "extensions": [
      {
        "title": "Choose a Source Theme",
        "command": "theme-mangler.pickSource"
      },
      {
        "title": "Edit My Custom Styles",
        "command": "theme-mangler.editStyles"
      }
    ]
  }
}
